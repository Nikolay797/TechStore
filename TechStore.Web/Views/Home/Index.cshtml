@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 style="color: red;">Welcome</h1>
    <h3 class="mb-3" style="color: blue;">Charge yourself with emotions with the best shop for laptops, TVs, smartwatches and peripherals!</h3>
</div>

<div class="col-8 offset-2">
	<div id="carousel" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
			<button type="button" data-bs-target="#carousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
			<button type="button" data-bs-target="#carousel" data-bs-slide-to="4" aria-label="Slide 5"></button>
			<button type="button" data-bs-target="#carousel" data-bs-slide-to="5" aria-label="Slide 6"></button>
		</div>
		<div class="carousel-inner">
			<div class="carousel-item active img-fluid">
				<img src="https://laptop.bg/system/images/489224/double/asus_tuf_gaming_a15_fa507nurlp080.png" class="d-block w-100" style="height: 350px; width: 350px" alt="Laptop image">
				<div class="carousel-caption d-none d-md-block">
					<h5>
						<a class="btn btn-success" asp-controller="Laptop" asp-action="Index">Laptops</a>
					</h5>
				</div>
			</div>
			<div class="carousel-item img-fluid">
				<img src="https://cdn.technomarket.bg/ng/media/cache/mid_thumb/uploads/library/product/09221914/6641ea36b899b.png.webp" class="d-block w-100" style="height: 350px; width: 350px" alt="Television image">
				<div class="carousel-caption d-none d-md-block">
					<h5>
						<a class="btn btn-success" asp-controller="Television" asp-action="Index">Televisions</a>
					</h5>
				</div>
			</div>
			<div class="carousel-item img-fluid">
				<img src="https://s13emagst.akamaized.net/products/49344/49343819/images/res_f7055e4638182266174b0faacfa77c08.jpg?width=720&height=720&hash=8D331387C167CE566355AF71EF34BAB7" class="d-block w-100" style="height: 350px; width: 350px" alt="Keyboard image">
				<div class="carousel-caption d-none d-md-block">
					<h5>
						<a class="btn btn-success" asp-controller="Keyboard" asp-action="Index">Keyboards</a>
					</h5>
				</div>
			</div>
			<div class="carousel-item img-fluid">
				<img src="https://laptop.bg/system/images/304869/double/RZ0104000100R3M1.jpg" class="d-block w-100" style="height: 350px; width: 350px" alt="Mouse image">
				<div class="carousel-caption d-none d-md-block">
					<h5>
						<a class="btn btn-success" asp-controller="Mouse" asp-action="Index">Mice</a>
					</h5>
				</div>
			</div>
			<div class="carousel-item img-fluid">
				<img src="https://laptop.bg/system/images/411385/double/RZ0404430500R3M1.jpg" class="d-block w-100" style="height: 350px; width: 350px" alt="Headphones image">
				<div class="carousel-caption d-none d-md-block">
					<h5>
						<a class="btn btn-success" asp-controller="Headphone" asp-action="Index">Headphones</a>
					</h5>
				</div>
			</div>
			<div class="carousel-item img-fluid">
				<img src="https://api.technopolis.bg/medias/Product-details-main-505222.jpg?context=bWFzdGVyfHJvb3R8MjQ4NDcxfGltYWdlL2pwZWd8YUdGbUwyZ3dNUzgwTXprNU1qQTBPVE0xTWpjek5DOVFjbTlrZFdOMExXUmxkR0ZwYkhNdGJXRnBibDgxTURVeU1qSXVhbkJufDdjYmFjODY3Yzk1YjhhMWY1ZDAwYWU0ZDYwMmRiMWY4NTU4OGZiNTIzMzBkM2YwZTQwNmQ0ZDY5OTMyMzMwMTA" class="d-block w-100" style="height: 350px; width: 350px" alt="Smartwatches image">
				<div class="carousel-caption d-none d-md-block">
					<h5>
						<a class="btn btn-success" asp-controller="Smartwatch" asp-action="Index">SmartWatches</a>
					</h5>
				</div>
			</div>
		</div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
            <span aria-hidden="true">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="red" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                </svg>
            </span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
            <span aria-hidden="true">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="red" class="bi bi-chevron-right" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
                </svg>
            </span>
            <span class="visually-hidden">Next</span>
        </button>

	</div>
</div>
