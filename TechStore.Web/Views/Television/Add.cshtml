@model TelevisionImportViewModel
@{
    ViewData["Title"] = "Add a Television";
}
<h1 class="text-center mb-2">@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Brand" class="form-label">Brand <sup>(required)</sup></label>
                <input asp-for="@Model.Brand" class="form-control" aria-required="true" placeholder="Enter brand" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.DisplaySize" class="form-label">Display Size (in inches) <sup>(required)</sup></label>
                <input asp-for="@Model.DisplaySize" class="form-control" aria-required="true" placeholder="24.5" />
                <span asp-validation-for="DisplaySize" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Resolution" class="form-label">Display Resolution <sup>(required)</sup></label>
                <input asp-for="@Model.Resolution" class="form-control" placeholder="3840x2160 4K Ultra HD" />
                <span asp-validation-for="Resolution" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Type" class="form-label">Type <sup>(required)</sup></label>
                <input asp-for="@Model.Type" class="form-control" aria-required="true" placeholder="For graphic design" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Quantity" class="form-label">Quantity <sup>(required)</sup></label>
                <input asp-for="@Model.Quantity" class="form-control" aria-required="true" placeholder="1" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label">Price <sup>(required)</sup></label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" placeholder="1250.00" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            @if ((this.User?.Identity?.IsAuthenticated ?? false)
            && this.User.IsInRole(Administrator))
            {
                <div class="mb-3">
                    <label asp-for="@Model.Warranty" class="form-label">Warranty (in months) <sup>(required)</sup></label>
                    <input asp-for="@Model.Warranty" class="form-control" placeholder="12" />
                    <span asp-validation-for="Warranty" class="text-danger"></span>
                </div>
            }
            <div class="mb-3">
                <label asp-for="@Model.DisplayTechnology" class="form-label">Display Technology</label>
                <input asp-for="@Model.DisplayTechnology" class="form-control" placeholder="LED" />
                <span asp-validation-for="DisplayTechnology" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Color" class="form-label">Television Color</label>
                <input asp-for="@Model.Color" class="form-control" placeholder="Black" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label">Television Image URL <sup>(highly recommended)</sup></label>
                <input asp-for="@Model.ImageUrl" class="form-control" placeholder="https://cdncloudcart.com/402/products/images/159038/televizor-samsung-qe43q67dauxxh--108-sm-3840x2160-uhd-4k--43-inch-qled-67336d615352e_800x800.jpeg?1731423609" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}