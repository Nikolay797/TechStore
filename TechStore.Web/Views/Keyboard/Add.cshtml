@model KeyboardImportViewModel

@{
	ViewData["Title"] = "Add a Keyboard";
}

<h1 class="text-center mb-2">@ViewData["Title"]</h1>

<hr />

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="mb-3">
				<label asp-for="@Model.Brand" class="form-label">Brand <sup>(required)</sup></label>
				<input asp-for="@Model.Brand" class="form-control" aria-required="true" placeholder="Enter brand" />
				<span asp-validation-for="Brand" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.IsWireless" class="form-label">Wireless <sup>(required)</sup></label>
				<div class="form-check">
					<input type="radio" name="radioButton" value="true" />
					<label>Yes</label>
				</div>
				<div class="form-check">
					<input type="radio" name="radioButton" value="false" />
					<label>No</label>
				</div>
				<span asp-validation-for="IsWireless" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.Type" class="form-label">Type <sup>(required)</sup></label>
				<input asp-for="@Model.Type" class="form-control" aria-required="true" placeholder="Gaming" />
				<span asp-validation-for="Type" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.Quantity" class="form-label">Quantity <sup>(required)</sup></label>
				<input asp-for="@Model.Quantity" class="form-control" aria-required="true" placeholder="1" />
				<span asp-validation-for="Quantity" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.Price" class="form-label">Price <sup>(required)</sup></label>
				<input asp-for="@Model.Price" class="form-control" aria-required="true" placeholder="50.00" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>

			@if ((this.User?.Identity?.IsAuthenticated ?? false)
					&& this.User.IsInRole(Administrator))
			{
				<div class="mb-3">
					<label asp-for="@Model.Warranty" class="form-label">Warranty (in months) <sup>(required)</sup></label>
					<input asp-for="@Model.Warranty" class="form-control" placeholder="12" />
					<span asp-validation-for="Warranty" class="text-danger"></span>
				</div>
			}

			<div class="mb-3">
				<label asp-for="@Model.Format" class="form-label">Keyboard Format</label>
				<input asp-for="@Model.Format" class="form-control" placeholder="Compact" />
				<span asp-validation-for="Format" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.Color" class="form-label">Keyboard Color</label>
				<input asp-for="@Model.Color" class="form-control" placeholder="Black" />
				<span asp-validation-for="Color" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.ImageUrl" class="form-label">Keyboard Image URL <sup>(highly recommended)</sup></label>
				<input asp-for="@Model.ImageUrl" class="form-control" placeholder="https://laptop.bg/system/images/419831/double/RZ0304690100R3M1.png" />
				<span asp-validation-for="ImageUrl" class="text-danger"></span>
			</div>

			<div class="text-center mb-3">
				<input class="btn btn-primary" type="submit" value="Add" />
			</div>
		</form>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}